{
  "name": "adif-sorrrter",
  "version": "1.0.0",
  "description": "A cross-platform software way to sort ADIF files according to DARC Bureau rules",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac-universal": "electron-builder --mac --universal --arm64",
    "dist:linux": "electron-builder --linux deb rpm tar.gz --arm64 --x64 --armv7l"
  },
  "build": {
    "appId": "de.db4scw.adif_sorrrter.app",
    "productName": "ADIF Sorrrter",
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "**/*",
      "!**/*.map",
      "!**/tests{,/**}",
      "!**/examples{,/**}",
      "!**/.local-chromium{,/**}"
    ],
    "extraFiles": [
      {
        "from": "assets/start.sh",
        "to": "start.sh"
      }
    ],
    "mac": {
      "target": ["dmg"],
      "icon": "adif_sorrrter_512x512.png"
    },
    "win": {
      "target": ["nsis",
                  "msi"],
      "icon": "adif_sorrrter.ico"
    },
    "linux": {
      "target": [
        { "target": "deb", "arch": ["x64", "armv7l", "arm64"] },
        { "target": "rpm", "arch": ["x64"] },
        { "target": "tar.gz", "arch": ["x64", "armv7l", "arm64"] },
        { "target": "AppImage", "arch": ["x64"] }
      ],
      "icon": "assets/adif_sorrrter_512x512.png",
      "category": "Utility",
      "maintainer": "DB4SCW Stefan",
      "desktop": "assets/adif_sorrrter.desktop"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "axios": "^1.6.8"
  }
}
